<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="Cristhian Santacruz Rules"
    xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 https://pmd.sourceforge.io/ruleset_2_0_0.xsd">
    
    <description>
        Code Inspection Lab, Cristhian Maickel Santacruz Gorozabel
    </description>

    <!-- Regla de buenas pr치cticas, excluyendo SystemPrintln -->
    <rule ref="category/java/bestpractices.xml/SystemPrintln">
        <exclude name="SystemPrintln"/>
    </rule>

    <!-- Regla de dise침o: campos inmutables -->
    <rule ref="category/java/design.xml/ImmutableField"/>

    <!-- Regla de dise침o: clases utilitarias -->
    <rule ref="category/java/design.xml/UseUtilityClass">
        <priority>1</priority>
    </rule>

    <!-- Reglas de documentaci칩n: comentarios requeridos pero ignorando ciertas propiedades -->
    <rule ref="category/java/documentation.xml/CommentRequired">
        <properties>
            <property name="classCommentRequirement" value="ignored"/>
            <property name="headerCommentRequirement" value="ignored"/>
            <property name="fieldCommentRequirement" value="ignored"/>
        </properties>
    </rule>
    
</ruleset>
